{
  "name": "express-typescript-http-api-template",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "nodemon | pino-pretty",
    "build": "tsc && tsc-alias",
    "test": "echo 'No tests yet'",
    "lint": "npx tsc --noEmit && eslint --ignore-path .gitignore src/ && prettier --check --ignore-path .gitignore .",
    "lint-fix": "npx tsc --noEmit && eslint --ignore-path .gitignore src/ --fix && prettier --write --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-pino-logger": "^7.0.0",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "http-errors": "^2.0.0",
    "http-status-codes": "^2.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "pino": "^7.11.0",
    "typeorm": "^0.3.6",
    "typescript": "^4.7.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.2",
    "@types/hpp": "^0.2.2",
    "@types/http-errors": "^1.8.0",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.36",
    "@types/pino": "^6.3.8",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "nodemon": "^2.0.16",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "ts-node": "^10.8.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
}
